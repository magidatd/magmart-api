{
  "name": "magmart-api",
  "version": "1.0.10a",
  "description": "API for online shopping platform using NodeJs, Express, Postgresql, and Drizzle",
  "main": "src/server.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec ts-node src/server.ts",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "test": "jest --watchAll --detectOpenHandles --forceExit",
    "format": "prettier --write 'src/**/*.ts'",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "cross-env DB_MIGRATING=true drizzle-kit migrate"
  },
  "keywords": [
    "api",
    "nodejs",
    "drizzle orm",
    "postgres",
    "postgresql",
    "javascript",
    "typescript",
    "express"
  ],
  "author": "Tazvivinga D Magida - Magida Creative Studios",
  "license": "MIT",
  "packageManager": "pnpm@10.6.4",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.14.0",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.6",
    "eslint": "^9.23.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^12.0.1",
    "drizzle-orm": "^0.41.0",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "paynow": "^2.2.2",
    "pg": "^8.14.1",
    "postgres": "^3.4.5",
    "validator": "^13.15.0",
    "zod": "^3.24.2"
  }
}
